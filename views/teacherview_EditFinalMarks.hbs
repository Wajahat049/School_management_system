            <label for="colFormLabel" class="col-sm-3 col-form-label">Student ID</label>
            <div class="col-sm-6">
              <input name="STUDENT_ID" type="number" class="form-control" id="colFormLabel" placeholder="Student ID" style="margin-left:-60px;">
            </div>
              
        </div>
        <div class="row ">
            <label for="colFormLabel" class="col-sm-3 col-form-label">Course Code</label>
