              <input name="COURSE_CODE" type="text" class="form-control" id="colFormLabel" placeholder="Course Code" style="margin-left:-60px;">
            </div>
              
        </div>
        <h2 style="font-family: 'Times New Roman';font-style:italic;color:#ececeb;background-color: #f1aa7b;;margin:3% 2% 3% -10%; padding-left: 35%;">Subjects</h2>

        <div class="row ">
            <label for="colFormLabel" class="col-sm-3 col-form-label">Marks</label>
            <div class="col-sm-6">
              <input name="MARKS" type="number" class="form-control" id="colFormLabel" placeholder="Marks" style="margin-left:-60px;">
            </div>
        </div>
       
              
        </div>
    <button type="submit"class="button3" style="margin: 0% 5% 5% 45%; padding:0.5% 3.5% 0.5% 3.5%; font-size: 20px;">Edit</button>

