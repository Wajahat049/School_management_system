      <div class="cs_exam_result">
        <h2 style="font-style:italic;color: #e25d04; text-align: center;background-color: #ffa568;">Monthly Fees</h2>
          <table class="cs_exam_result_table">
               <tr class="table_first_column">
                <td>Date of Payment</td>
                <td>Amount</td>
                <td>Status</td>
            </tr>

            {{#each OwnMonthlyFees}}
            <tr>
                <td>{{DATE}}</td>
                <td>{{AMOUNT}}</td>
                <td>{{FEE_STATUS}}</td>
            </tr>
            {{/each}}
    
        
        </table>

    <h2 style="font-style:italic;color: #e25d04; text-align: center;background-color: #ffa568;">Examination's Fees</h2>
      <table class="cs_exam_result_table">
            <tr class="table_first_column">
                <td>Date of Payment</td>
                <td>Amount</td>
                <td>Status</td>
            </tr>

            {{#each OwnExamFees}}
            <tr>
                <td>{{DATE}}</td>
                <td>{{AMOUNT}}</td>
                <td>{{FEE_STATUS}}</td>
            </tr>
            {{/each}}
    
    </table>




    <h2 style="font-style:italic;color: #e25d04; text-align: center;background-color: #ffa568;">Annual Fees</h2>
